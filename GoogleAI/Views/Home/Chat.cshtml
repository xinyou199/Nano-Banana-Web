        border-radius: 50%;
        background: #999;
        animation: bounce 1.4s infinite;
    }

    .loading span:nth-child(2) {
        animation-delay: 0.2s;
    }

    .loading span:nth-child(3) {
        animation-delay: 0.4s;
    }

    @@keyframes bounce {
        0%, 80%, 100% {
            opacity: 0.3;
        }
        40% {
            opacity: 1;
        }
    }
</style>

